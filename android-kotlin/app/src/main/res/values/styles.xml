<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="text_floating_label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/submit_button</item>
    </style>

    <style name="booking_engine_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black_opac</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="booking_engine_text_regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/text_highlighted</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_submit">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>